<div class="login-container">
  <h2>麻雀を始めよう</h2>

  <!-- 新規プレイヤー -->
  <div class="signup-section">
    <h3>初めての方</h3>
    <%= form_with url: login_path, local: true do |f| %>
      <%= f.hidden_field :action_type, value: 'signup' %>
      <%= f.text_field :name, placeholder: 'プレイヤー名（空欄でもOK）', class: 'form-control' %>
      <%= f.submit 'ID生成してゲーム開始', class: 'btn btn-primary btn-lg' %>
    <% end %>
  </div>

  <hr>

  <!-- 既存プレイヤー -->
  <div class="login-section">
    <h3>IDをお持ちの方</h3>
    <%= form_with url: login_path, local: true do |f| %>
      <%= f.hidden_field :action_type, value: 'login' %>
      <%= f.text_field :unique_id, placeholder: 'プレイヤーID（例：ABCD1234）', class: 'form-control' %>
      <%= f.submit 'ログイン', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
